{
  "manifest_version": 3,
  "name": "CopyText Logger",
  "version": "1.0",
  "description": "Automatically logs the copyText variable as an object.",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://app.scholarsbureau.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
