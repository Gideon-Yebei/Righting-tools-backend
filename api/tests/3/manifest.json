{
  "manifest_version": 3,
  "name": "CopyText Logger",
  "version": "1.0",
  "description": "Logs the copyText variable from a webpage as an object.",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Extract copyText"
  }
}
